<div class="row">
  <div class="col-md-6"><%= link_to wiki.title, wiki_path(wiki) %></div>
  <% if current_user != nil %>  
    <% if policy(wiki).edit? %>
      <div class="col-md-3"><%= link_to "Edit", edit_wiki_path(wiki.id) %></div>
    <% end %>
    <% if policy(wiki).destroy? %>
      <div class="col-md-3"><%= link_to "Delete", [wiki], method: :delete %></div>
    <% end %>
  <% end %>
</div>